# Environment variables for Tech Maven Geospatial Marketing Website

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://techmaven.geospatial.com
NEXT_PUBLIC_SITE_NAME="Tech Maven Geospatial"

# Contact Form Configuration
CONTACT_FORM_ENDPOINT=https://api.techmaven.geospatial.com/contact
CONTACT_FORM_API_KEY=your_api_key_here

# Security Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://techmaven.geospatial.com

# Analytics Configuration
# Google Analytics 4 - Replace with your actual Measurement ID
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
# Google Tag Manager (Optional)
# NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Email Configuration (for contact form)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=contact@techmaven.geospatial.com
SMTP_PASS=your_smtp_password

# Notification Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# Security Headers (Optional overrides)
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"

# Feature Flags
ENABLE_CONTACT_FORM=true
ENABLE_DEMO_BOOKING=true
ENABLE_DOCUMENT_DOWNLOADS=false

# Third-party Integrations
CALENDLY_URL=https://calendly.com/techmaven-geospatial
HUBSPOT_PORTAL_ID=your_hubspot_portal_id
HUBSPOT_FORM_ID=your_hubspot_form_id

# Development Configuration
NODE_ENV=development
ANALYZE=false

# Government Compliance
ENABLE_SECURITY_HEADERS=true
ENABLE_EXPORT_CONTROL_NOTICE=true
CLASSIFICATION_LEVEL=UNCLASSIFIED